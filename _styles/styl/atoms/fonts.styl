
$primary-font = 'Source Sans Pro'
$performance-font = 'Helvetica', 'Arial', sans-serif
$primary-font-size = 16px
$primary-font-line-height = 1.5em
$light = 300
$normal = 400
$semibold = 600
$bold = 700

primary-font(w)
  font-family: $primary-font, $performance-font
  font-weight: w
  line-height: $primary-font-line-height

html
  font-size: $primary-font-size


@font-face
	font-family: 'icomoon'
	src: url('../_fonts/icomoon.eot?ebz9au')
	src: url('../_fonts/icomoon.eot?ebz9au#iefix') format('embedded-opentype'), url('../_fonts/icomoon.ttf?ebz9au') format('truetype'), url('../_fonts/icomoon.woff?ebz9au') format('woff'), url('../_fonts/icomoon.svg?ebz9au#icomoon') format('svg')
	font-weight: normal
	font-style: normal

[class^='icon-'], [class*=' icon-']
  font-family: 'icomoon' !important
  speak: none
  font-style: normal
  font-weight: normal
  font-variant: normal
  text-transform: none
  line-height: 1
  -webkit-font-smoothing: antialiased
  -moz-osx-font-smoothing: grayscale

