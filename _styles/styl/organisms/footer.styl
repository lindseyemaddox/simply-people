
footer.slider
  position: absolute
  bottom: 0
  width: 100%
  left: 0
  right: 0

.testimonials
  // position: absolute
  width: 92%
  margin-left: 8%
  bottom: 7em
  // opacity: 0
  transition: opacity 400ms ease-in

  .testimonial
    primary-font($normal)
    background-color: rgba(101,99,89,.4)
    // width: 25em
    color: $white-alt
    font-size: 0.625em
    border-radius: 20px
    padding: 20px 10px 10px 20px
    position: relative
    display: inline-block
    // margin-right: 3em
    opacity: .8

    &:after
      content: ''
      width: 0
      height: 0
      border-style: solid
      border-width: 30px 4em 0px 4em
      border-color: rgba(101,99,89,.4) transparent transparent transparent
      position: absolute
      left: 8.5em
      bottom: -3em

    &:nth-child(2)
      background-color: rgba($primary,.4)
      width: 21em
      color: $white-alt
      font-size: 0.85em
      border-radius: 30px
      padding: 30px 15px 15px 30px
      margin-bottom: 4.3em
      vertical-align: bottom
      opacity: 1

      &:after
        content: ''
        width: 0
        height: 0
        border-style: solid
        border-width: 30px 4em 0px 4em
        border-color: rgba($primary,.4) transparent transparent transparent
        position: absolute
        left: 6.5em
        bottom: -2.22em

    p.author
      primary-font($light)
      text-transform: uppercase
      font-size: .8em
      line-height: 3em
      letter-spacing: .25em
      text-align: right

  &.visible
    opacity: 1

.copyline
  position: absolute
  width: 100%
  bottom: 1.5em
  cursor: pointer

  h1
    color: rgba($white, 0.5)
    font-size: 0.7em
    primary-font($semibold)
    text-align: center
    letter-spacing: .25em
    text-transform: uppercase

    .icon-badge
      font-size: 6em
      line-height: .5em
      margin: 0 -.05em 0 -.45em
      display: inline-block
      vertical-align: bottom