aside
  padding: 15% 0 0 10%
  img
    width: 80%
    margin-bottom: 46px
  h2
    primary-font($primary-font-light)
    color: $white
    font-size: 1em
    margin-bottom: 100px
  .connect
    display: inline-block
    vertical-align: top
    width: 70%
    h3
      primary-font($primary-font-bold)
      text-transform: uppercase
      color: $primary
      font-size: 1.3em
      margin-bottom: 18px
    .phone
      .type
        float: left
        width: 25%
        p
          primary-font($primary-font-light)
          font-size: 1.5em
          color: $white
          margin-bottom: 10px
      .number
        float: right
        width: 75%
        a
          primary-font($primary-font-semibold)
          font-size: 1.5em
          color: $white
          text-decoration: none
          display: block
          margin-bottom: 10px
  .linkedin
    display: inline-block
    vertical-align: top
    width: 29%
    div
      a
        display: block
        img
          width: 25%
          display: inline-block
          vertical-align: top
          margin-bottom: 10%
        span
          width: 65%
          margin-left: 9%
          display: inline-block
          primary-font($primary-font-bold-normal)
          font-size: .8em
          line-height: 1em
          vertical-align: top
          color: $white
