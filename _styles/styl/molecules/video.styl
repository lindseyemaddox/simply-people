
.video-overlay
  background: rgba($black, 0.8)
  bottom: 0
  height: 100%
  left: 0
  position: absolute
  right: 0
  top: 0
  width: 100%
  z-index: 1

video
  position: fixed
  top: 40%
  left: 50%
  min-width: 100%
  min-height: 120%
  width: auto;
  height: auto;
  z-index: -100;
  translate(-50%, -50%)
  background: url(/_images/puzzle-large.jpg) no-repeat
  background-size: cover
