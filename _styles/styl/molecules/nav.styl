
nav-icon-view()
  .nav-items
    a
      span
        opacity: 0
        display: block
      &.sub
        opacity: 0
        height: 0

nav-list-view()
  .nav-items
    a
      text-align: left
      span
        opacity: 1
        display: inline

    [class^="list"] input:checked ~ a.sub
      opacity: 1
      height: auto


.nav-items
  margin-top: 111px
  a
    margin: 0 auto 27px
    display: block
    text-align: center
    font-size: 3.5em
    &:before
      vertical-align: middle
    span
      font-size: 0.4em
      vertical-align: middle
      height: 0
    &.sub
      font-size: 2em
      margin-left: 1em
      cursor: pointer

[class^="list"]
  position: relative

  input
    position: absolute
    left:-99999px
    top: -99999px

  label
    width: 100%
    height: 4.5em
    position: absolute
    cursor: pointer

.nav-pane
  transition: 250ms
  position: fixed
  transform: translateX(0px)
  top: 0
  height: 100vh
  width: 75px
  background: rgba($white-alt, 0.8)
  box-shadow: 0px 3px 10px rgba($black, 0.2)
  nav-icon-view()

  &.open
    transform: translateX(-425px)
    transition: 250ms
    width: 500px
    nav-list-view()

.toggle-nav
  cursor: pointer
  text-align: center
  primary-font($primary-font-light)
  position: absolute
  width: 100%
  margin-bottom: 50px

  span.m, span.n, span.u
    display: inline-block
    font-size: 1.05rem
    opacity: 0
    transition: 250ms
    letter-spacing: 2px
    vertical-align: middle

  span.e
    display: inline-block
    height: 14px
    width: 20px
    vertical-align: middle
    margin: 0 3px 0 2px

    &.btn-close
      span.bar:nth-child(1)
        transition: 250ms
        transform: rotate(45deg)
        top: 6px
      span.bar:nth-child(2)
        opacity: 0
        transition: 250ms
      span.bar:nth-child(3)
        transition: 250ms
        transform: rotate(-45deg)
        bottom: 6px

    span.bar
      transition: 250ms
      position: relative
      display: block
      background: #212121
      border-radius: 1px
      border-bottom: 1.8px solid lighten($black, 25%)
      width: 20px
      height: 2.5px

      &:nth-child(2)
        margin: 3.6px 0

.toggle-nav:hover
  span.m, span.n, span.u
    opacity: 1
    transition: 250ms
    color: $primary
  span.e span.bar
    background-color: $primary
    border-bottom-color: $primary

